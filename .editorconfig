# http://editorconfig.org
root = true

# Default files
[*.{js,jsx,ts,tsx,json,svg,html,css,less,sass}]
indent_size = 2
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# SVG files
[*.svg]
insert_final_newline = false

# JSON files
[*.json]
insert_final_newline = false

# Minified JavaScript files
[*.min.js]
indent_style = false
insert_final_newline = false

# Minified CSS files
[*.min.css]
indent_style = false
insert_final_newline = false