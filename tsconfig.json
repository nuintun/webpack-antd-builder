{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~js/*": [
        "Assets/js/*"
      ],
      "~css/*": [
        "Assets/css/*"
      ],
      "~images/*": [
        "Assets/images/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}